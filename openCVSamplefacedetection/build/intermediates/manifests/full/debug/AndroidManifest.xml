<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.opencv.samples.facedetect"
    android:versionCode="301"
    android:versionName="3.01" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="26" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.opencv.samples.facedetect.LoginActivity1"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.opencv.samples.facedetect.MenuActivity" />
        <activity
            android:name="org.opencv.samples.facedetect.SignupActivity"
            android:label="Sign Up" />
        <activity android:name="org.opencv.samples.facedetect.RegisterActivity" />
        <activity
            android:name="org.opencv.samples.facedetect.FdActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="org.opencv.samples.facedetect.AddStudentActivity"
            android:label="Add Student" />
        <activity
            android:name="org.opencv.samples.facedetect.EditStudentActivity"
            android:label="Edit Student" />
        <activity
            android:name="org.opencv.samples.facedetect.DeleteStudentActivity"
            android:label="Delete Student" />
        <activity
            android:name="org.opencv.samples.facedetect.DisplayImageActivity"
            android:label="Display Image" />
        <activity
            android:name="org.opencv.samples.facedetect.AddImages"
            android:label="Add Images" />
        <activity
            android:name="org.opencv.samples.facedetect.CameraSession"
            android:label="Start Session" />
        <activity
            android:name="org.opencv.samples.facedetect.MainActivity"
            android:label="Start Session"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.opencv.samples.facedetect.ViewStudentActivity"
            android:label="View Students" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.0.0-beta1" />
    </application>

</manifest>